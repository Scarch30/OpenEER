<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Micro + caméra -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <!-- Accès médias (API 33+) + compat (≤32) -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <!-- Localisation -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Notifications (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Exact alarms -->
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />

    <!-- Foreground services -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MICROPHONE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PROJECTION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />

    <!-- Réseau -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Localisation en arrière-plan (Android 10+) -->
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <!-- Types de foreground services (Android 10+/14+) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />

    <!-- (Optionnel mais utile) éviter l’endormissement CPU pendant le suivi -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".OpenEERApp"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material3.DayNight.NoActionBar">

        <!-- ✅ Starter = écran de démarrage (warm-up), unique LAUNCHER -->
        <activity
            android:name=".ui.StarterActivity"
            android:exported="true"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ✅ Écran principal -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar" />

        <!-- Ancien onboarding : plus de LAUNCHER -->
        <activity
            android:name=".ui.OnboardingActivity"
            android:exported="false"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar" />

        <activity
            android:name=".ui.PhotoViewerActivity"
            android:exported="false"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar" />

        <activity
            android:name=".ui.viewer.VideoPlayerActivity"
            android:exported="false"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar" />

        <activity
            android:name=".ui.KeyboardCaptureActivity"
            android:exported="false"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar"
            android:windowSoftInputMode="stateVisible|adjustResize" />

        <activity
            android:name=".ui.capture.SketchCaptureActivity"
            android:exported="false"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar" />

        <activity
            android:name=".ui.camera.CameraCaptureActivity"
            android:exported="false"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar" />

        <activity
            android:name=".ui.library.LibraryActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:label="Bibliothèque" />

        <activity
            android:name=".ui.library.MapActivity"
            android:exported="false"
            android:label="@string/map_title"
            android:parentActivityName=".ui.library.LibraryActivity"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar" />

        <activity
            android:name=".ui.library.DayNotesActivity"
            android:exported="false"
            android:label="Notes du jour" />

        <activity
            android:name=".ui.library.LocationNotesActivity"
            android:exported="false"
            android:label="Notes à proximité" />

        <activity
            android:name=".ui.viewer.MapSnapshotViewerActivity"
            android:exported="false"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar" />

        <service
            android:name=".route.RouteRecordingService"
            android:exported="false"
            android:foregroundServiceType="location" />

        <service
            android:name=".audio.RecorderService"
            android:exported="false"
            android:foregroundServiceType="microphone" />

        <service
            android:name="androidx.work.impl.foreground.SystemForegroundService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />


        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- ⛔ Désactive ProfileInstaller pour éviter les logs et délais -->
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">
            <meta-data
                android:name="androidx.profileinstaller.ProfileInstallerInitializer"
                tools:node="remove" />
        </provider>
    </application>
</manifest>
