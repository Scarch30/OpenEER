<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.maplibre.android.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/searchContainer"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="6dp"
        app:startIconDrawable="@android:drawable/ic_menu_search"
        app:startIconContentDescription="@string/map_search_hint"
        app:boxBackgroundMode="outline"
        app:hintEnabled="true">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/searchInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/map_search_hint"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:scrollHorizontally="false"
            android:textSize="16sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/clusterHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="96dp"
        android:padding="8dp"
        android:background="#66000000"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/manualRouteHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="148dp"
        android:background="#66000000"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:text="@string/map_manual_route_hint"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/mapControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="12dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnZoomIn"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@android:drawable/btn_default"
            android:contentDescription="@string/zoom_in"
            android:src="@android:drawable/ic_input_add" />

        <ImageButton
            android:id="@+id/btnZoomOut"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="8dp"
            android:background="@android:drawable/btn_default"
            android:contentDescription="@string/zoom_out"
            android:src="@android:drawable/ic_input_delete" />

        <ImageButton
            android:id="@+id/btnRecenter"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="8dp"
            android:background="@android:drawable/btn_default"
            android:contentDescription="@string/recenter"
            android:src="@android:drawable/ic_menu_mylocation" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/locationActions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="12dp"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddHere"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/map_action_here" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRecordRoute"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:enabled="false"
            android:text="@string/map_route_start" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUndoManualRoute"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:text="↩︎"
            android:textAllCaps="false"
            android:visibility="gone"
            android:contentDescription="@string/map_manual_route_undo_cd" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelManualRoute"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/action_cancel"
            android:visibility="gone"
            android:contentDescription="@string/map_manual_route_cancel_cd" />
    </LinearLayout>

    <include
        android:id="@+id/routeDebugOverlay"
        layout="@layout/view_route_debug_overlay" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnFavoriteHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="16dp"
        android:text="@string/map_favorite_here_button"
        android:textAllCaps="false"
        android:visibility="gone"
        app:iconPadding="12dp" />

</FrameLayout>
