<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.maplibre.android.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/clusterHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:background="#66000000"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/manualRouteHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="64dp"
        android:background="#66000000"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:text="@string/map_manual_route_hint"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/mapControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="12dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnZoomIn"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@android:drawable/btn_default"
            android:contentDescription="@string/zoom_in"
            android:src="@android:drawable/ic_input_add" />

        <ImageButton
            android:id="@+id/btnZoomOut"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="8dp"
            android:background="@android:drawable/btn_default"
            android:contentDescription="@string/zoom_out"
            android:src="@android:drawable/ic_input_delete" />

        <ImageButton
            android:id="@+id/btnRecenter"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="8dp"
            android:background="@android:drawable/btn_default"
            android:contentDescription="@string/recenter"
            android:src="@android:drawable/ic_menu_mylocation" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/locationActions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="12dp"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddHere"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/map_action_here" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRecordRoute"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:enabled="false"
            android:text="@string/map_route_start" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUndoManualRoute"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:text="↩︎"
            android:textAllCaps="false"
            android:visibility="gone"
            android:contentDescription="@string/map_manual_route_undo_cd" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelManualRoute"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/action_cancel"
            android:visibility="gone"
            android:contentDescription="@string/map_manual_route_cancel_cd" />
    </LinearLayout>

</FrameLayout>
