<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.maplibre.android.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/clusterHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:background="#66000000"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/mapControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="12dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnZoomIn"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@android:drawable/btn_default"
            android:contentDescription="@string/zoom_in"
            android:src="@android:drawable/ic_input_add" />

        <ImageButton
            android:id="@+id/btnZoomOut"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="8dp"
            android:background="@android:drawable/btn_default"
            android:contentDescription="@string/zoom_out"
            android:src="@android:drawable/ic_input_delete" />

        <ImageButton
            android:id="@+id/btnRecenter"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="8dp"
            android:background="@android:drawable/btn_default"
            android:contentDescription="@string/recenter"
            android:src="@android:drawable/ic_menu_mylocation" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddHere"
        style="@style/Widget.Material3.Button.FilledTonalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="12dp"
        android:enabled="false"
        android:text="@string/map_action_here" />

</FrameLayout>
