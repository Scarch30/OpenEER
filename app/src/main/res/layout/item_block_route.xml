<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.chip.Chip xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/routeChip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:checkable="false"
    android:ellipsize="end"
    android:maxLines="1"
    android:textColor="?attr/colorOnSurface"
    app:chipIcon="@drawable/ic_block_route"
    app:chipIconVisible="true"
    app:chipIconSize="18dp"
    app:chipStartPadding="8dp"
    app:iconStartPadding="4dp"
    app:textStartPadding="4dp"
    app:textEndPadding="8dp"
    app:chipStrokeWidth="1dp"
    app:chipCornerRadius="12dp"
    app:rippleColor="?attr/colorControlHighlight"
    app:chipBackgroundColor="?attr/colorSurfaceVariant"
    app:chipStrokeColor="?attr/colorOutline"
    app:chipIconTint="?attr/colorOnSurfaceVariant"
    app:textAppearance="?attr/textAppearanceBodySmall" />
