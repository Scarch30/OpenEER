<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sketchToolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F6F7F9"
    android:elevation="8dp"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="8dp"
    android:paddingBottom="10dp"
    android:visibility="gone">

    <LinearLayout
        android:id="@+id/toolbarMainRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <ImageButton
            android:id="@+id/btnPen"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_toolbar_button"
            android:contentDescription="@string/sketch_tool_pen"
            android:tint="@color/sketch_toolbar_icon"
            android:src="@drawable/ic_tool_pen" />

        <ImageButton
            android:id="@+id/btnShapes"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_toolbar_button"
            android:contentDescription="@string/sketch_tool_shapes"
            android:tint="@color/sketch_toolbar_icon"
            android:src="@drawable/ic_tool_shapes" />

        <ImageButton
            android:id="@+id/btnEraser"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_toolbar_button"
            android:contentDescription="@string/sketch_tool_eraser"
            android:tint="@color/sketch_toolbar_icon"
            android:src="@drawable/ic_tool_eraser" />

        <ImageButton
            android:id="@+id/btnUndo"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/bg_toolbar_button"
            android:contentDescription="@string/sketch_tool_undo"
            android:tint="@color/sketch_toolbar_icon"
            android:src="@drawable/ic_tool_undo" />

        <ImageButton
            android:id="@+id/btnRedo"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_toolbar_button"
            android:contentDescription="@string/sketch_tool_redo"
            android:tint="@color/sketch_toolbar_icon"
            android:src="@drawable/ic_tool_redo" />

        <ImageButton
            android:id="@+id/btnClear"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_toolbar_button"
            android:contentDescription="@string/sketch_tool_clear"
            android:tint="@color/sketch_toolbar_icon"
            android:src="@drawable/ic_tool_delete" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btnValidate"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_toolbar_button"
            android:contentDescription="@string/sketch_tool_validate"
            android:tint="@color/sketch_toolbar_icon"
            android:src="@drawable/ic_check" />

        <ImageButton
            android:id="@+id/btnCancel"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_toolbar_button"
            android:contentDescription="@string/sketch_tool_cancel"
            android:tint="@color/sketch_toolbar_icon"
            android:src="@drawable/ic_close" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1A000000" />

    <LinearLayout
        android:id="@+id/penOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="8dp"
                android:text="@string/sketch_thickness"
                android:textColor="#99000000"
                android:textSize="13sp" />

            <SeekBar
                android:id="@+id/penThickness"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="23"
                android:progress="5" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/penColors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/sketch_color_hint"
            android:textColor="#66000000"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/shapeOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnShapeLine"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_toolbar_button"
                android:contentDescription="@string/sketch_shape_line"
                android:tint="@color/sketch_toolbar_icon"
                android:src="@drawable/ic_shape_line" />

            <ImageButton
                android:id="@+id/btnShapeArrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_toolbar_button"
                android:contentDescription="@string/sketch_shape_arrow"
                android:tint="@color/sketch_toolbar_icon"
                android:src="@drawable/ic_shape_arrow" />

            <ImageButton
                android:id="@+id/btnShapeRect"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_toolbar_button"
                android:contentDescription="@string/sketch_shape_rect"
                android:tint="@color/sketch_toolbar_icon"
                android:src="@drawable/ic_shape_rect" />

            <ImageButton
                android:id="@+id/btnShapeRoundRect"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_toolbar_button"
                android:contentDescription="@string/sketch_shape_round_rect"
                android:tint="@color/sketch_toolbar_icon"
                android:src="@drawable/ic_shape_round_rect" />

            <ImageButton
                android:id="@+id/btnShapeCircle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_toolbar_button"
                android:contentDescription="@string/sketch_shape_circle"
                android:tint="@color/sketch_toolbar_icon"
                android:src="@drawable/ic_shape_circle" />

            <ImageButton
                android:id="@+id/btnShapeEllipse"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_toolbar_button"
                android:contentDescription="@string/sketch_shape_ellipse"
                android:tint="@color/sketch_toolbar_icon"
                android:src="@drawable/ic_shape_ellipse" />

            <ImageButton
                android:id="@+id/btnShapeTriangle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_toolbar_button"
                android:contentDescription="@string/sketch_shape_triangle"
                android:tint="@color/sketch_toolbar_icon"
                android:src="@drawable/ic_shape_triangle" />

            <ImageButton
                android:id="@+id/btnShapeStar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_toolbar_button"
                android:contentDescription="@string/sketch_shape_star"
                android:tint="@color/sketch_toolbar_icon"
                android:src="@drawable/ic_shape_star" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/chkShapeFilled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/sketch_shape_filled"
            android:textColor="#99000000"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="8dp"
                android:text="@string/sketch_thickness"
                android:textColor="#99000000"
                android:textSize="13sp" />

            <SeekBar
                android:id="@+id/shapeThickness"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="23"
                android:progress="7" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shapeColors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/sketch_color_hint"
            android:textColor="#66000000"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/eraserOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="8dp"
                android:text="@string/sketch_thickness"
                android:textColor="#99000000"
                android:textSize="13sp" />

            <SeekBar
                android:id="@+id/eraserThickness"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="23"
                android:progress="11" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/sketch_eraser_hint"
            android:textColor="#66000000"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>
