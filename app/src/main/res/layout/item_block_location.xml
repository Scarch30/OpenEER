<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/locationPreview"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginBottom="4dp"
        android:adjustViewBounds="true"
        android:background="@drawable/bg_block_preview"
        android:clipToOutline="true"
        android:contentDescription="@string/block_map_preview_cd"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <com.google.android.material.chip.Chip
        android:id="@+id/locationChip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:checkable="false"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="?attr/colorOnSurface"
        android:textSize="13sp"
        android:textStyle="normal"
        android:fontFamily="sans-serif"
        app:chipIcon="@drawable/ic_block_location"
        app:chipIconVisible="true"
        app:chipIconSize="18dp"
        app:chipStartPadding="8dp"
        app:iconStartPadding="4dp"
        app:textStartPadding="4dp"
        app:textEndPadding="8dp"
        app:chipStrokeWidth="1dp"
        app:chipCornerRadius="12dp"
        app:rippleColor="?attr/colorControlHighlight"
        app:chipBackgroundColor="?attr/colorSurfaceVariant"
        app:chipStrokeColor="?attr/colorOutline"
        app:chipIconTint="?attr/colorOnSurfaceVariant" />
</LinearLayout>
