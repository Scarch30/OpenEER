<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/routeDebugOverlayRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="top|start"
    android:layout_margin="12dp"
    android:background="@drawable/bg_route_debug_overlay"
    android:padding="12dp"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RAW n=0, SIMPL n=0 (-0%), L=0.00 km, eps=0 m"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelEpsilon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ε (m)"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/valueEpsilon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8 m"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderEpsilon"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:value="8"
            app:valueFrom="1"
            app:valueTo="50"
            app:stepSize="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelMinInterval"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Δt min (ms)"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/valueMinInterval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1200 ms"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderMinInterval"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:value="1200"
            app:stepSize="100"
            app:valueFrom="200"
            app:valueTo="3000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelMinDisplacement"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Δd min (m)"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/valueMinDisplacement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8 m"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderMinDisplacement"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:value="8"
            app:stepSize="1"
            app:valueFrom="1"
            app:valueTo="30" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelMaxAccuracy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="σ max (m)"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/valueMaxAccuracy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 m"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderMaxAccuracy"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:value="25"
            app:stepSize="1"
            app:valueFrom="5"
            app:valueTo="50" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReset"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Reset"
            android:textAllCaps="false" />

    </LinearLayout>

</FrameLayout>
