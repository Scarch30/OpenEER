<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?attr/colorSurface"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/mapSnapshotImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:background="@drawable/shape_rounded_bg"
        android:contentDescription="@string/block_map_preview_cd" />

    <TextView
        android:id="@+id/mapSnapshotTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:gravity="center_horizontal"
        android:textColor="?attr/colorOnSurface"
        android:ellipsize="end"
        android:maxLines="2"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/mapSnapshotOpenBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/block_open_in_google_maps"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnOpenRouteInMaps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/map_open_route_in_google_maps"
        android:visibility="gone" />
</LinearLayout>
