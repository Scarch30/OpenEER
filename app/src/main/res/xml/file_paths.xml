<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- URI pour /data/data/<package>/cache/images/... -->
    <cache-path
        name="images_cache"
        path="images/" />

    <!-- URI pour /data/data/<package>/files/images/... -->
    <files-path
        name="images_files"
        path="images/" />

    <!-- âœ… Couvre TOUT /data/data/<package>/files/... (inclut imports/) -->
    <files-path
        name="app_files"
        path="." />

    <!-- (Optionnel) Couvre explicitement /data/data/<package>/files/imports/... -->
    <files-path
        name="imports_files"
        path="imports/" />

    <!-- URI pour /storage/.../Android/data/<package>/cache/images/... -->
    <external-cache-path
        name="images_external_cache"
        path="images/" />

    <!-- Enregistrements audio (wav) -->
    <files-path
        name="recordings_files"
        path="recordings/" />
    <external-files-path
        name="recordings_external"
        path="recordings/" />
</paths>

